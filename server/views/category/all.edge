<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
</head>
<body>
<h1>Categories</h1>
<a href="/categories/create">Create Category</a>
    <table>
        <thead>
            <tr>
                <th>Name</th>
            </tr>
        </thead>
        <tbody> 
            @each(category in result)
            <tr>
                <td>{{category.name}}</td>
                <td>
                    
                 <form action="/categories/change/{{category._id}}" method="GET">
                    <input type="submit" value="Edit" />
                </form>
            </td>
            <td>
                <form action="/categories/delete/{{category._id}}" method="GET">
                    <input type="submit" value="Delete" />
                </form>
                </td>
            </tr>
            @endeach
        </tbody>
    </table>
</body>
</html>